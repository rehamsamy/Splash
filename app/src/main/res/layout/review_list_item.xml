<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/visa_shape"
    android:padding="10sp"
    android:layout_marginBottom="20sp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/review_user_pic"
        android:id="@+id/user_image"
        app:layout_constraintTop_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_name"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="8dp"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/user_image"/>






    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:text=" hefkkkkkkkkkkkkkkkkkvjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjdjjfffdfdsaasdddddddddddddddddddddddd"
        app:layout_constraintTop_toBottomOf="@id/user_image"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/margin_left"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
       >

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/add_review_not_select" />

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/add_review_not_select" />

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/add_review_not_select" />

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/add_review_not_select" />

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/add_review_not_select" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>